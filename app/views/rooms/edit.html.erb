<%= @room.name %>
<%= @room.description %>
<div>
  <p>
  Status:
    <span id="room-status" data-room-id="<%= @room.id %>">
      <%= @room.status_description %>
    </span>
  </p>
  <% if @room.offline %>
    <div class="p-3 mb-2 bg-info text-white">
      <i class="fa fa-thumbs-down" title="Down"></i>
      The room status light is currently offline.
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-lg-6 mb-5">
    <%= form_for @room do |f| %>
      <%= f.hidden_field :status, value: 1 %><br />
      <%= f.submit "Waiting", class: 'btn btn-warning btn-block btn-lg' %>
    <% end %>

    <%= form_for @room do |f| %>
      <%= f.hidden_field :status, value: 2 %><br />
      <%= f.submit "Time's Up", class: 'btn btn-danger btn-block btn-lg' %>
    <% end %>

    <%= form_for @room do |f| %>
      <%= f.hidden_field :status, value: 3 %><br />
      <%= f.submit "Time To Leave!", class: 'btn btn-dark btn-block btn-lg' %>
    <% end %>
  </div>

  <div class="col-lg-6">
    <h3> Use QR code or url below to send notification</h3>
    <img src="<%= generate_qr(room_url(@room)) %>" class="qr-code">
    <p>
      <%= link_to(room_url(@room), room_path(@room)) %>
    </p>
  </div>
</div>
