<%= @room.name %>
<%= @room.description %>
<p>
status: <%= @room.status_description %>
</p>

<div class="row">
  <div class="col-lg-6">
    <%= form_for @room do |f| %>
      <%= f.hidden_field :status, value: 1 %><br />
      <%= f.submit "waiting"%>
    <% end %>

    <%= form_for @room do |f| %>
      <%= f.hidden_field :status, value: 2 %><br />
      <%= f.submit "time's up"%>
    <% end %>

    <%= form_for @room do |f| %>
      <%= f.hidden_field :status, value: 3 %><br />
      <%= f.submit "time to leave!"%>
    <% end %>
  </div>

  <div class="col-lg-6">
    <h3> Use QR code or url below to send notification</h3>
    <img src="<%= generate_qr(room_url(@room)) %>" class="qr-code">
    <p>
      <%= link_to(room_url(@room), room_path(@room)) %>
    </p>
  </div>
</div>
